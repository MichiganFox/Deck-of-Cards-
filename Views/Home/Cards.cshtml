@{
}




     <form asp-method="post" asp-action="Cards">

            <p>Please draw 5 cards</p>
            <input type="hidden" name="id"/>

            <input type="submit" />
      </form>
@{

    if (Model != null)
    {
       
        for (int i =0; i<Model.cards.Length; i++)
        {
            <div>
            <p>@Model.cards[i].value @Model.cards[i].suit </p>
            <img src="@Model.cards[i].image"/>
            
            </div>
        }
        
    }
}